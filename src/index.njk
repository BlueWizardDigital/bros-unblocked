---
layout: base.njk
title: Bro Unblocked!!
description: Play thousands of free online games instantly. No downloads required!
---

{# Homepage #}

<div class="homepage">

  {# Hero Section #}
  <section class="hero" style="background-image: url({{ site.hero | url }})">
    <div class="container">
      <h1>{{ site.title }}</h1>
  </section>

  {# Featured Games #}
  <section class="featured-games">
    <div class="container">
      <h2>‚≠ê Featured Games</h2>

      <div class="games-grid">
        {% for game in games %}
          {% if game.featured %}
            <article class="game-card">
              <a href="{{ '/games/' | url ~ game.slug }}">
                <img src="{{ game.image | url }}" alt="{{ game.title }}">
                <h3>{{ game.title }}</h3>
                <p>{{ game.category }}</p>
              </a>
            </article>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>

  <div class="ad-container">
	{% include "components/ad.njk" %}
  </div>
  {# Categories Showcase #}
  <section class="categories">
    <div class="container">
		<h2>Categories</h2>
		<div class="categories-grid">
		{% for category in categories %}
			<a href="{{ '/category/' | url ~ category.slug }}" class="category-box">
			<span>{{ category.icon }}</span>
			<h3>{{ category.name }}</h3>
			<p>{{ category.description }}</p>
			</a>
		{% endfor %}
		</div>
      </div>
    </div>
  </section>

  {# All Games Grid #}
  <section class="all-games">
    <div class="container">
      <h2>All Games</h2>

      <div class="games-grid">
        {% for game in games %}
          <article class="game-card">
            <a href="{{ '/games/' | url ~ game.slug }}/">
              <img src="{{ game.image | url }}" alt="{{ game.title }}">
              <h3>{{ game.title }}</h3>
              <p>{{ game.category }}</p>
            </a>
          </article>
        {% endfor %}
      </div>
    </div>
  </section>

</div>
