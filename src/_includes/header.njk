    {# Logo and Navigation #}
    <div class="header-main">
      <a href="/" class="logo">
        <span class="logo-text">{{ site.title }}</span>
      </a>

      {# Mobile Menu Toggle #}
      <button class="mobile-menu-toggle" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>

      {# Main Navigation #}
      <nav class="main-nav">
        <a href="/" {% if page.url == "/" %}class="active"{% endif %}>Home</a>
        <a href="/games" {% if page.url == "/games" %}class="active"{% endif %}>Games</a>
		{% for page in pages %}
			<a href="/" {% if page.url == "/page.url" %}class="active"{% endif %}>{{ page.title }}</a>
		{% endfor %}
        <!-- <a href="/categories" {% if page.url == "/categories" %}class="active"{% endif %}>Categories</a>
