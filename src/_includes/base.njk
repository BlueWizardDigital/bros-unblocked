<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  {# SEO #}
<title>{% if game and game.title %}{{ game.title }} | {{ site.title }}{% else %}{{ title or site.title }}{% endif %}</title>
  <meta name="description" content="{{ site.description }}">
  
  {# AdSense Verification #}
  <meta name="google-adsense-account" content="{{ site.adsense }}">
  
  {# Stylesheets #}
  <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
  
  {# AdSense Script #}
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client={{ site.adsense }}"
       crossorigin="anonymous"></script>
</head>

<body>
  
  {# Include Header #}
  {% include "header.njk" %}
  
  {# Main Content Area #}
  <main class="site-main">
    {{ content | safe }}
  </main>
  
  {# Include Footer #}
  {% include "footer.njk" %}
  
  {# Global JavaScript #}
  <script src="{{ '/js/main.js' | url }}"></script>

  {# Page-specific scripts - override in child templates #}
  {% block pageScripts %}{% endblock %}

</body>
</html>