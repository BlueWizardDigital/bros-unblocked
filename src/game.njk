---
layout: base.njk
pagination:
  data: games
  size: 1
  alias: game
  before: function(data) { return data.filter(g => g && g.slug); }
permalink: "/games/{{ game.slug }}/"
eleventyExcludeFromCollections: true
title: "{{ game.title }} | {{ site.title }}"
description: "{{ game.description }}"
---

{# Individual Game Page #}

<div class="game-page">

  {# Breadcrumb #}
  <div class="container">
    <nav class="breadcrumb">
      <a href="'/' | url">Home</a> / 
	  <a href="{{ '/games' | url }}">Games</a> /
      <span>{{ game.title }}</span>
    </nav>
  </div>

  <div class="container">
    <div class="game-layout">
      
      {# Main Content #}
      <div class="game-main">
        
        {# Game Info #}
        <h1>{{ game.title }}</h1>
        <div class="game-meta">
          <a href="{{ '/category/' | url ~ game.category | slug }}" class="tag"><span class="category">{{ game.category }}</span></a>
        </div>

        {# Game Iframe #}
		<div class="game-container">
		{% if game.embedType == "javascript" %}
			{# JavaScript Embed - Use our handler #}
			<iframe 
			src="/game-embed.html?game={{ game.url | urlencode }}" 
			frameborder="0" 
			allowfullscreen
			title="{{ game.title }}">
			</iframe>
		{% else %}
			{# Direct iframe URL #}
			<iframe 
			src="{{ game.url }}" 
			frameborder="0" 
			allowfullscreen
			title="{{ game.title }}">
			</iframe>
		{% endif %}
		</div>

        {# In-Content Ad #}
        <div class="ad-container ad-incontent">
          <ins class="adsbygoogle"
               style="display:block"
               data-ad-client="ca-pub-YOUR_PUBLISHER_ID"
               data-ad-slot="2345678901"
               data-ad-format="rectangle"></ins>
          <script>
               (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>

        {# Description #}
        <div class="game-description">
          <h2>About {{ game.title }}</h2>
          <p>{{ game.description }}</p>
          
          {% if game.instructions %}
            <h3>How to Play</h3>
            <div class="instructions">{{ game.instructions | safe }}</div>
          {% endif %}

          {# Tags #}
          <div class="game-tags">
            {% for tag in game.tags %}
              <a href="{{ '/tag/' | url ~ tag | slug }}" class="tag">{{ tag }}</a>
            {% endfor %}
          </div>
        </div>

      </div>

      {# Sidebar #}
      <aside class="game-sidebar">
        
        {# Sidebar Ad #}
        <div class="ad-container ad-sidebar">
          <ins class="adsbygoogle"
               style="display:block"
               data-ad-client="ca-pub-YOUR_PUBLISHER_ID"
               data-ad-slot="3456789012"
               data-ad-format="vertical"></ins>
          <script>
               (adsbygoogle = window.adsbygoogle || []).push({});
          </script>
        </div>

        {# Popular Games Widget #}
        <div class="sidebar-widget">
          <h3>ðŸ”¥ Popular Games</h3>
          <ul>
            {% for popular in games | limit(5) %}
              {% if popular.slug %}
              <li>
                <a href="/games/{{ popular.slug }}/">
                  {{ popular.title }}
                </a>
              </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>

      </aside>

    </div>
  </div>

</div>
